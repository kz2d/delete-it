<!doctype html>
<html lang="ru">
  <head>
    {{>meta}}
    {{> styles}}
  </head>

  <body class="wrapper">
  {{> header current="index"}}
  {{#>container}}
      <section class="left-block">
        <div class="main-text">
          <h1 class="title">Natural scented candles</h1>
          <p class="subtitle">Perfect for your home</p>
          <div class="btn-position">
            <button class="style-reset btn-style">
              <a href="#" class="new-btn">
                New arrival
                <img src="images/Arrow 1.svg" alt="arrow" />
              </a>
            </button>
          </div>
        </div>
        <div class="announcement-block">
          <div class="price-style">10K</div>
          <div class="announcement-text">satisfied customers</div>
        </div>
        <div class="img-vector"></div>
      </section>
      <section class="right-block">
        <div class="offer-img img-candles">
          <div class="offer-block">
            <div class="offer-text">
              <h3 class="block-title">Candles</h3>
              <p class="block-subtitle">natural wax</p>
            </div>
            <div class="border-line"></div>
            <div class="offer-price">$20</div>
          </div>
        </div>
        <div class="offer-img img-diffuser">
          <div class="offer-block">
            <div class="offer-text">
              <h3 class="block-title">Diffusers</h3>
              <p class="block-subtitle">delicate scent</p>
            </div>
            <div class="border-line"></div>
            <div class="offer-price">$20</div>
          </div>
        </div>
        <div class="offer-img img-body">
          <div class="offer-block">
            <div class="offer-text">
              <h3 class="block-title">Body care</h3>
              <p class="block-subtitle">100% natural ingredients</p>
            </div>
            <div class="border-line"></div>
            <div class="offer-price">$20</div>
          </div>
        </div>
        <div class="offer-img img-automobile">
          <div class="offer-block">
            <div class="offer-text">
              <h3 class="block-title">Automobile diffusor</h3>
              <p class="block-subtitle">the scent is always with you</p>
            </div>
            <div class="border-line"></div>
            <div class="offer-price">$20</div>
          </div>
        </div>
      </section>
      {{/container}}

  {{> footer }}

  </body>
</html>
