generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  password String
  history History[]
}

model History {
  id    Int     @default(autoincrement()) @id
  time DateTime  @default(now()) @db.Timestamptz(3)
  totalPrice Decimal
  items HistoryItem[]

  user  User?    @relation(fields: [userId], references: [id])

  userId  Int?
}

model HistoryItem {
  id    Int     @default(autoincrement()) @id     
  title     String
  subtitle  String
  img       String
  price Decimal
  count Int

  item  Item?    @relation(fields: [itemId], references: [id])

  itemId  Int?
    
  history  History?    @relation(fields: [historyId], references: [id])

  historyId  Int?
}

model Supplier {
  id    Int     @default(autoincrement()) @id
  name  String
  address  String?
  items Item[]
}

model Item {
  id        Int      @default(autoincrement()) @id
  title     String
  subtitle  String
  img       String
  price Decimal
  supplier  Supplier?    @relation(fields: [supplierId], references: [id])

  supplierId  Int?
  history  HistoryItem[]
}